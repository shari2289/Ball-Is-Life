<link rel='stylesheet' href='/stylesheets/edit.css' />
<% include ../partials/nav %>
    <div id="container">
        <form action="/players/<%= player._id %>?_method=PUT" method="POST">
            <label for="player">
            <h2>Edit <%= player.hooper %>:</h2>
        </label>
            <label>Add Hooper Pic:
            <input type="text" class="input" name="img"><br>
        </label>
            <BR>
            <label>Rate Hooper:
            <select name="avgRating" class="input">
              <option value="10">10 Stars</option>
                <option value="9">9 Stars</option>
                <option value="8">8 Stars</option>
                <option value="7">7 Stars</option>
                <option value="6">6 Stars</option>
                <option value="5">5 Stars</option>
                <option value="4">4 Stars</option>
                <option value="3">3 Stars</option>
                <option value="2">2 Stars</option>
                <option value="1">1 Star</option>
            </select>
            <label>Age:
              <input type="text" class="input" name="age">
          </label><br>
          <label>Height:
            <input type="text" class="input" name="height">
        </label><br>
        <label>Position:
          <input type="text" class="input" name="position">
      </label><br>
            <label>Comments:
            <input type="text" class="input" name="comments">
        </label><br>

            <button class="submit-button" id="button" type="submit">Save Hooper</button>
        </form>
    </div>
    <% include ../partials/footer %>